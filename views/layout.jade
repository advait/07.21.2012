- var page = String(title)

doctype 5
html
  head
    title= 'Compucius - ' + title
    != css('bootstrap.min')
    != css('bootstrap-responsive.min')
    != css('style')
    != js('jquery-1.7.2.min')
    != js('bootstrap.min')
    != js('script')
    block scripts
  body(id=page)
    // Navbar
    div.navbar.navbar-fixed-top
      div.navbar-inner
        div.container
          button.btn.btn-navbar(data-toggle="collapse", data-target=".nav-collapse")
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.brand(href="/") Compucius
          div.nav-collapse.collapse
            ul.nav.pull-left
              li
                a(href="/jobs") Your Jobs
              if user
                li
                  a.play-button(href="#") Launch Worker
            ul.nav.pull-right
              if everyauth.loggedIn 
                li
                  a(href="/account") Hello, #{user.name}!
                li
                  a(href="/logout") Logout
              else
                li
                  a(href="/auth/facebook") Login


    // Content
    block content
