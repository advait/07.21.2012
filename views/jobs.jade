extends layout

block scripts
  != js('jquery.knob')
  != js('developer')

block content
  div.container
    div.row
      div.span12
        div.page-header
          div.pull-right
            a.btn.btn-primary(href="/jobs/new") Add new job
          h1 Your current jobs
    div.row
      div#knobs.span12
        - jobs.forEach(function(job) {
          div.job.pull-left(id=job._id)
            h3=job.name
            h4.state=job.state
            input.knob(type='text', data-readonly='true', data-thickness='.15')
        - })
  div#results.modal.fade.hide
    div.modal-header
      h3
    div.modal-body
      pre
